<?xml version="1.0" encoding="utf-8"?>
<ripple android:color="?attr/colorControlHighlight" xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
<selector >

    <!--button_disabled-->
    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <corners android:radius="0dp"/>
            <padding android:bottom="0dp" android:right="0dp" android:top="0dp" android:left="0dp"/>
            <stroke android:width="0dp" android:color="@color/buttonDisableBorder" />
            <gradient  android:angle="-225"  android:startColor="@color/buttonDisableStart" android:endColor="@color/buttonDisableEnd"  />
        </shape>
    </item>

    <!--button_pressed-->
    <item android:state_pressed="true"
        android:state_enabled="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="0dp"/>
            <padding android:bottom="0dp" android:right="0dp" android:top="0dp" android:left="0dp"/>
            <stroke android:width="0dp" android:color="@color/buttonPressBorder" />
            <gradient  android:angle="-225"  android:startColor="@color/buttonPressStart" android:endColor="@color/buttonPressEnd"  />
        </shape>
    </item>

    <!--button_focused-->
    <item android:state_focused="true"
        android:state_enabled="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="0dp"/>
            <padding android:bottom="0dp" android:right="0dp" android:top="0dp" android:left="0dp"/>
            <stroke android:width="0dp" android:color="@color/buttonPressBorder" />
            <gradient  android:angle="-225"  android:startColor="@color/buttonPressStart" android:endColor="@color/buttonPressEnd"  />
        </shape>
    </item>

    <!--button_enabled-->
    <item
        android:state_enabled="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="0dp"/>
            <padding android:bottom="0dp" android:right="0dp" android:top="0dp" android:left="0dp"/>
            <stroke android:width="0dp" android:color="@color/buttonNormalBorder" />
            <gradient  android:angle="-225"  android:startColor="@color/buttonNormalStart" android:endColor="@color/buttonNormalEnd"  />
        </shape>
    </item>
    </selector>
    </item>
</ripple>